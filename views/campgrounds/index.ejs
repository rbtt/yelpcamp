<% layout('layouts/boilerplate')%>

<div id="cluster-map"></div>

<h1>Available Campgrounds</h1>
<%for(campground of campgrounds) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(campground.images.length) { %> 
                <a href="/campgrounds/<%= campground._id %>"><img src="<%=campground.images[0].url%>" alt="" class="img-fluid"></a>
                <% } else { %>
                    <a href="/campgrounds/<%= campground._id %>"><img src="https://martialartsplusinc.com/wp-content/uploads/2017/04/default-image.jpg" alt="" class="img-fluid"></a>
                <% } %>  
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %> <span class="badge bg-secondary text-light">$<%=campground.price%> </span></h5>
                    <p class="card-text"><%= campground.description %>
                    <p class="card-text">
                    <small class="text-muted"><%= campground.location %> </small><br>
                    <!-- <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View</a> -->
                </div>
            </div>
        </div>
    </div>
<%}%>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const campgrounds = {features: <%- JSON.stringify(campgrounds)%>}
</script>
<script src="/js/cluster.js"></script>

