<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="mb-2">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="campground[title]" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-2">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" id="location" name="campground[location]" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <!-- <div class="mb-2">
                <label for="image" class="form-label">Image source:</label>
                <input type="text" id="image" name="campground[image]" class="form-control" required>
                <div class="valid-feedback">Looks good</div>
            </div> -->
                <div class="mb-2">
                    <label for="image" class="form-label">Upload image:</label>
                    <input type="file" id="image" name="image" class="form-control" required multiple>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-2">
                    <label for="description" class="form-label">Description:</label>
                    <textarea type="text" id="description" name="campground[description]" class="form-control"
                        required></textarea>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-2">
                    <label for="price" class="form-label">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend">$</span>
                        <input type="text" id="price" name="campground[price]" class="form-control" required>
                        <div class="valid-feedback">Looks good</div>
                    </div>
                </div>
                <!-- <input type="hidden" name="author" id="" placeholder="" value="<%=currentUser._id%>"> -->
                <button type="submit" class="btn btn-success">Save</button><br>
                <a href="/campgrounds" class="btn btn-secondary mt-2">Back</a>
            </form>
        </div>
    </div>